<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/v_start"
        android:background="@drawable/bg_center_dialog_rounded"
        android:paddingHorizontal="20dp"
        android:elevation="2dp"
        android:layout_centerInParent="true"
        android:layout_width="350dp"
        android:orientation="vertical"
        android:layout_height="wrap_content" >
        <TextView
            android:text="个人信息保护提示"
            android:layout_margin="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_privacy"
            android:text="我们非常重视您的个人信息和隐私保护，为了保护您的个人权益，在使用前，请务必阅读《用户协议》和《隐私协议》\n\n如果您同意此协议，请点击“同意”按钮"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="同意"
            android:elevation="2dp"
            android:id="@+id/tv_ok"
            android:background="@drawable/jiuwan_shape_yellow_rounded_4dp"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:textColor="#9D791C"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="不同意"
            android:id="@+id/tv_deny"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />





    </LinearLayout>

    <LinearLayout
        android:id="@+id/v_final"
        android:visibility="gone"
        android:background="@drawable/bg_center_dialog_rounded"
        android:paddingHorizontal="20dp"
        android:elevation="2dp"
        android:layout_centerInParent="true"
        android:layout_width="350dp"
        android:orientation="vertical"
        android:layout_height="wrap_content" >
        <TextView
            android:text="温馨提示"
            android:textStyle="bold"
            android:layout_margin="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:text="若您不同意协议，我们将无法为您提供游戏服务                              "
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="同意"
            android:layout_marginTop="35dp"
            android:elevation="2dp"
            android:id="@+id/tv_ok1"
            android:background="@drawable/jiuwan_shape_yellow_rounded_4dp"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:textColor="#9D791C"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="不同意"
            android:id="@+id/tv_deny1"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />





    </LinearLayout>






</RelativeLayout>